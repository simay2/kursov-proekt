#include <iostream>
using namespace std;

int main() {
    // условие на задачата
    cout << "Да се обработи масив A[6,6] съставен от реални числа в интервала [0;99.99]." << endl;
    cout << "Елементите на A равни на своите съседни елементи ще бъдат изнесени в масива С[L,3] заедно с техните индекси." << endl;

    // име на автора
    cout << "Автор на програмата: Симай Мартинова" << endl;
    cout << "371222023" << endl;

    // въвеждане на входните данни
    float A[6][6];
    for (int i=0; i<6; i++) {
        for (int j=0; j<6; j++) {
            cout << "A[" << i+1 << "," << j+1 << "]: ";
            cin >> A[i][j];
        }
    }

    // отпечатване на входните данни
    cout << "\nВходни данни:\n";
    for (int i=0; i<6; i++) {
        for (int j=0; j<6; j++) {
            cout << A[i][j] << " ";
        }
        cout << endl;
    }

    // обработка на масива
    float C[36][3];
    int k = 0;
    for (int i=0; i<6; i++) {
        for (int j=0; j<6; j++) {
            if (i > 0 && A[i][j] == A[i-1][j]) {
                C[k][0] = i-1;
                C[k][1] = j;
                C[k][2] = A[i][j];
                k++;
            }
            if (i < 5 && A[i][j] == A[i+1][j]) {
                C[k][0] = i+1;
                C[k][1] = j;
                C[k][2] = A[i][j];
                k++;
            }
            if (j > 0 && A[i][j] == A[i][j-1]) {
                C[k][0] = i;
                C[k][1] = j-1;
                C[k][2] = A[i][j];
                k++;
            }
            if (j < 5 && A[i][j] == A[i][j+1]) {
                C[k][0] = i;
                C[k][1] = j+1;
                C[k][2] = A[i][j];
                k++;
            }
        }
    }

    // отпечатване на резултатите
    cout << "\nРезултати:\n";
    if (k == 0) {
        cout << "Няма елементи в масива A, които са равни на своите съседни елементи." << endl;
    } else {
        for (int i=0; i<k; i++)
        system("pause");
        return 0;
      }
    }  
        
        
